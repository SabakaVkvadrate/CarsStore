@model CarsStore.ViewModel.CarViewModel.CarEditViewModel
@{
    ViewBag.Title = Model.Id > 0 ? "Edit" : "Add";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Car", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Brand, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Brand, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Brand)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Model, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Model)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ManafDate, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.ManafDate, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.ManafDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Price, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImgLink, new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.ImgLink, new { @class = "control-label col-md-10" })
            @Html.ValidationMessageFor(model => model.ImgLink)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
